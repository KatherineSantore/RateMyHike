{{#each posts as |post|}}



<h1> <small>{{post.title}}</small></h1>
  <div>
    <li>
    {{#if post.location}}
      {{post.location}}
    {{else}}
      No location provided.
    {{/if}}
  </li>
  </div>
  <div>
    <li>
    {{#if post.body}}
    {{post.body}}
    {{else}}
      No information provided.
  {{/if}}
</li>
</div>


<h3> Update Post </h3>
<form class="update-form" data-id="{{post.id}}">
  <div class="messagebox"> </div>
   <div class="form-group">
    <label for="formGroupExampleInput">Title</label>
    <input name = "post[title]" value="{{post.title}}" type="text" data-id="{{post.id}}" class="form-control">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput">Location</label>
    <input name ="post[location]" value="{{post.location}}" data-id="{{post.id}}" type="text" class="form-control">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">Rating</label>
    <input  name ="post[body]" class="form-control" type="text" data-id="{{post.id}}" value="{{post.body}}"></input>
  </div>
  <button type="submit" data-id="{{post.id}}" class="editButton btn btn-primary">Update Post</button>
  <button type="button" data-id="{{post.id}}" class="deleteButton btn btn-primary">Delete Post</button>

</form> <br>




  {{/each}}
